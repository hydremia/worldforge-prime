{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MapIngestionSession",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "const": "cartographer.session.v1"
    },
    "sessionId": {
      "type": "string"
    },
    "worldId": {
      "type": "string"
    },
    "mapName": {
      "type": "string"
    },
    "sourceType": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "features": {
      "type": "array",
      "items": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "MapFeature",
        "type": "object",
        "properties": {
          "schemaVersion": {
            "const": "cartographer.mapFeature.v1"
          },
          "featureId": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "approxArea": {
            "type": "object"
          },
          "approxPath": {
            "type": "object"
          },
          "approxLocation": {
            "type": "object"
          },
          "settlementHint": {
            "type": "string"
          },
          "locationTypeHint": {
            "type": "string"
          },
          "realmHint": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "confidence": {
            "type": "number"
          },
          "notes": {
            "type": "string"
          }
        },
        "required": [
          "schemaVersion",
          "featureId",
          "kind"
        ]
      }
    },
    "pendingQuestions": {
      "type": "array"
    },
    "answers": {
      "type": "array"
    },
    "proposedWSM": {
      "$ref": "cartographer_wsmProposal_v1.json"
    },
    "createdAt": {
      "type": "string"
    },
    "updatedAt": {
      "type": "string"
    },
    "logs": {
      "type": "array"
    }
  },
  "required": [
    "schemaVersion",
    "sessionId",
    "worldId",
    "mapName",
    "sourceType",
    "status",
    "features",
    "createdAt",
    "updatedAt"
  ]
}
